---
{/*header mobile */}
const { pathname } = Astro.url
---
<header id="header-nav-mobile" class="fixed w-full flex items-center justify-between md:hidden py-4 px-4 z-50">
   <a href="/">
      <img class="w-12 h-16" src="/logo.png" alt="logo esland" />
   </a>
  <input type="checkbox" id="event-onClick" />
  <label for="event-onClick"> {/*con el for indico que apunta al id del checkbox de arriba */}
    <svg id="open-nav" class="w-12 h-12 text-white cursor-pointer" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h10"/>
    </svg>
  </label>
  
 <nav id="nav-mobile" class="fixed w-full min-h-screen inset-0 bg-black flex flex-col justify-center items-center">
  <label for="event-onClick">
    <svg id="close-nav" class="w-12 h-12 text-white absolute right-4 top-4 cursor-pointer" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18 18 6m0 12L6 6"/>
    </svg>
  </label>
 
    <ul class="flex flex-col text-center gap-y-10">
       <li>
         <a href="/info" class={`nav-link ${pathname === '/info' ? 'underline underline-offset-4' : ''} font-medium text-lg`}>INFO</a>
       </li>
       <li>
         <a href="/archivo" class={`nav-link ${pathname === '/archivo' ? 'underline underline-offset-4' : ''} font-medium text-lg`}>ARCHIVO</a>
       </li>
       <li>
         <a href="/finalistas" class={`nav-link ${pathname === '/finalistas' ? 'underline underline-offset-4' : ''} font-medium text-lg`}>FINALISTAS</a>
       </li>
    </ul>
    <a href="/esland-fortnite" class="my-button-shadow w-fit px-12 py-2 border border-solid border-white rounded-full mt-10 font-normal text-base">
      ISLA ESLAND
   </a>
 </nav>
</header>
<style>
  #event-onClick{
   display: none; /*escondo el checkbox*/
  }
  #nav-mobile{
    transform: translateY(-100%);
    visibility: hidden;
    transition: all 0.3s;
  }
  #event-onClick:checked ~ #nav-mobile{
    /*Si toco el boton del menu, que es label indicado para el checkbox, y esta checked, el nav mobile sufrira una modificacion */
    transform: translateY(0);
    visibility: visible;
  } 
</style>